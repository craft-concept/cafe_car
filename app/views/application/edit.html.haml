= ui.page title: title("Edit #{model_name.human}") do |page|
  = page.left :head do
    %p= link(model).index

  = page.left do
    - title = "#{model_name.singular.titleize} ##{record.id}"

    = ui.card :sticky, title: do |card|
      - if object.persisted?
        = card.section do
          =  ui(record).attributes :updated_at, :created_at, try: true

        = card.section do
          = ui(record).controls show: true

      = ui.card title: "Actions" do
        = render('actions')

  = page.body do
    = render 'form'
