- title = title(object)
- actions = ui(object).controls(index: true)

= ui.page :full, title:, actions: do |page|
  = page.left do
    - title = "#{model_name.singular.titleize} ##{record.id}"

    = ui.card :sticky, title: do |card|
      = card.section do
        =  ui(record).attributes :updated_at, :created_at, try: true

      = ui.card title: "Actions" do
        = render("actions")

      = yield :left

  = page.body do
    - if tab = params[:tab]
      -# - title tab.humanize
      -# = row bottom: true do
      -#   = page.head
      -#     %h1 record.try(:name).fmap {|name| "#{name}'s #{tab.humanize(capitalize: false)}" }.felse { tab.humanize }
      -#   = link "‚Üê Back to #{model_name.human}", link: path_super(record)
      -#
      -# = render "tab_#{tab}"
    - else
      = render "show"

  = page.right { yield :right }
