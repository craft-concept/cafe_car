- title = title record

= ui.page :full, title: do |page|
  = page.left :head do
    %p= link(model).index

  = page.left do
    - title = "#{model_name.singular.titleize} ##{record.id}"

    = ui.card :sticky, title: do |card|
      = card.section do
        =  ui(record).attributes :updated_at, :created_at, try: true

      = card.section do
        = ui(record).controls

      = ui.card title: "Actions" do
        = render('actions')

  = page.body do
    - if tab = params[:tab]
      -# - title tab.humanize
      -# = row bottom: true do
      -#   = page.head
      -#     %h1 record.try(:name).fmap {|name| "#{name}'s #{tab.humanize(capitalize: false)}" }.felse { tab.humanize }
      -#   = link "‚Üê Back to #{model_name.human}", link: path_super(record)
      -#
      -# = render "tab_#{tab}"
    - else
      = render "show"

  = page.right :flex do
    = render "aside"
