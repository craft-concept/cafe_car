- title = title record

= ui.page :full, title: do |page|
  = page.left :flex do
    - title = "#{model_name.singular.titleize} ##{record.id}"
    - actions = capture do
      = link_to "← All #{model_name.human(count: 2)}", [model]

    = ui.card :sticky, title:, actions: do |card|
      = card.section do
        =  ui(record).attributes :updated_at, :created_at, try: true

      = card.section do
        = ui(record).controls

      = ui.card title: "Actions" do
        = render('actions')

  = page.body do
    - if tab = params[:tab]
      -# - title tab.humanize
      -# = row bottom: true do
      -#   = page.head
      -#     %h1 record.try(:name).fmap {|name| "#{name}'s #{tab.humanize(capitalize: false)}" }.felse { tab.humanize }
      -#   = link "← Back to #{model_name.human}", link: path_super(record)
      -#
      -# = render "tab_#{tab}"
    - else
      = render "show"

  = page.right :flex do
    = render "aside"
