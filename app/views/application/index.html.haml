= ui.page do |page|
  = page.head do
    %h1= title model.model_name.plural.titleize
    -# %div= format_numbers page_entries_info(records)

    = render "index_actions"

  = page.left do
    - if policy(model).new?
      = link_to "New #{model_name.human}", [model, action: :new]

    - if params.key?(:debug)
      = render "debug"

    = render "filters"

  = page.body do
    = render("table").presence or render("empty")
