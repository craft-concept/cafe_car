= ui.page do |page|
  = page.head do
    %h1= title model.model_name.human(count: :all)
    -# %div= format_numbers page_entries_info(records)

    = render "index_actions"

  = page.left do
    - if policy(model).new?
      = link_to "New #{model_name.human}", [model, action: :new]

    = render "debug" if params.key?(:debug)

    = render "filters"

  = page.body do
    = render("index")
